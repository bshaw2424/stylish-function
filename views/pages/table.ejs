<% include ../partials/header %>
<% include ../partials/nav %>

<!-- page intro-description section -->
<section class="page-intro">
  <div class="container">
    <h3>Table</h3>
    <div class="secondary-nav">
      <a href="">table combo</a>
      <a href="">extendable</a>
      <a href="">alternative</a>
    </div>
  </div>
</section>
<section id="filter-section">
  <div class="container">
    <div class="price-filter filter">
      <span class="category-title">Sort By:</span>
      <ul class="inActive">
        <li><a href="/tables/newest">newest</a></li>
        <li><a href="/tables/low-price">low to high</a></li>
        <li><a href="/tables/high-price">high to low</a></li>
      </ul>
    </div>
  </div>
</section>
<main id="product-features">
  <div class="container">
    <div class="row">
      <% tableProductIndex.forEach(tableProducts => { %>
      <aside id="aside-filter" class="product-aside">
        <p> filter </p>
        <ul>
          <a href="/tables/newest">
            <li>Newest</li>
          </a>
          <a href="/tables/low-price">
            <li>Low - High</li>
          </a>
          <a href="/tables/high-price">
            <li>High - Low</li>
          </a>
        </ul>
      </aside>
      <div class="product-card col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <a href="/tables/<%= tableProducts._id %>">
              <img src="<%= tableProducts.main_image %>" alt="<%= tableProducts.title %>" />
            </a>
          </div>
          <div class="purchase-information">
            <p class="card-title">
              <a href="/tables/<%= tableProducts._id %>">
                <%= tableProducts.title %>
              </a>
            </p>
            <p class="card-price"><%= `$${tableProducts.price}` %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<% include ../partials/pagination %>
<% include ../partials/footer %>