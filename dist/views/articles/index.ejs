<% include ../partials/header %> <% include ../partials/nav %>

<section class="container">
  <div class="article-section">
    <h1 style="display: none">Articles</h1>
    <div class="row">
      <% for(const article of articles) { %>
      <div class="article-container">
        <div class="card article-container_card">
          <div class="card-image article-container_image-container">
            <img src="<%= article.image.url %>" alt="" />
          </div>
          <div class="card-content article-container_content">
            <h3 class="card-title">
              <a href="/articles/<%= article.slug %>"> <%= article.title %> </a>
            </h3>
            <%= article.created_on.toLocaleDateString() %>
            <p class="article-description"><%= article.description %></p>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>
<% include ../partials/footer %>
