<%- include('../partials/nav') %>
<section class="hero-section">
  <div class="hero-section_container">
    <div class="hero-section_image-container">
      <img
        class="hero-section_image"
        src="../../images/website-hero-picture.jpg"
        alt="functional sofa setup"
      />
      <div class="hero-section_title-container">
        <p>
          Redefining Your Space With A Touch Of Modern, Style, and Functionality
        </p>
      </div>
    </div>
  </div>
</section>
<section class="index-articles">
  <div class="container">
    <h1>Articles</h1>
    <div class="row">
      <% articles.forEach(article => { %>
      <div class="card-container">
        <div class="card index-articles_card">
          <div class="card-image index-articles_card-image">
            <img src="<%= article.image.url %>" alt="" />
          </div>
          <div class="card-content index-articles_card-content">
            <p class="card-title index-article-section_card-title">
              <a href="/articles/<%= article.slug %>"> <%= article.title %> </a>
            </p>
            <p class="card-description index-articles_card-description">
              <%= article.description %>
            </p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <div class="index-articles_button-container button-container">
      <a class="go-button btn" href="/articles">see more articles</a>
    </div>
  </div>
</section>
