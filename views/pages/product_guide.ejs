<!-- Page filter section with a search bar and select menu -->
<section id="filter-section">
  <div class="category-filter filter">
    <span class="category-title categories">Categories</span>
    <ul class="inActive">
      <li><a href="">seating</a></li>
      <li><a href="">storage</a></li>
      <li><a href="">table</a></li>
    </ul>
  </div>
  <div class="price-filter filter">
    <span class="category-title price">Sort By</span>
    <ul>
      <li><a href="">newest</a></li>
      <li><a href="">low to high</a></li>
      <li><a href="">high to low</a></li>
    </ul>
  </div>
</section>
<main id="product-features">
  <div class="container">
    <div class="row">
      <% products.forEach(product => { %>
      <aside id="aside-categories" class="product-aside">
        <p>categories</p>
        <ul>
          <a href="/seating">
            <li>seating</li>
          </a>
          <a href="/storage">
            <li>storage</li>
          </a>
          <a href="/table">
            <li>tables</li>
          </a>
        </ul>
      </aside>
      <aside id="aside-filter" class="product-aside">
        <p> filter </p>
        <ul>
          <a href="/seating">
            <li>Newest</li>
          </a>
          <a href="/storage">
            <li>Low - High</li>
          </a>
          <a href="/table">
            <li>High - Low</li>
          </a>
        </ul>
      </aside>
      <div style="position: relative" class="col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <img src="<%= product.main_image %>" alt="#" />
          </div>
          <div class="purchase-information  ">
            <p class="card-title"> <a href="<%= product._id %>" target="_blank"><%= product.title %> </p></a>
            <p class="card-price"><%= `$${product.price}` %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>
