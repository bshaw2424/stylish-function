<% include ../../partials/header %>

<section>
  <div class="index-container">
    <% include ../../admin/admin-nav %>
    <div class="container">
      <form
        action="/admin/articles/<%= articles._id %>/products/add?_method=PUT"
        method="POST"
      >
        <h1>Add a product</h1>
        <div class="product-section">
          <label for="product-title">Product Title</label>
          <input
            type="text"
            name="Products[title]"
            id="product-title"
            class="browser-default form-field"
          />

          <label for="product-price">Product Price</label>
          <input
            type="text"
            name="Products[price]"
            id="product-price"
            class="browser-default form-field"
          />

          <label for="product-image">Product Image</label>
          <input
            type="text"
            name="Products[image]"
            id="product-image"
            class="browser-default form-field"
          />

          <label for="product-description">Product Description</label>
          <textarea
            name="Products[description]"
            id="product-description"
            cols="30"
            rows="10"
            class="form-field"
          ></textarea>
        </div>
        <div class="button-container">
          <button class="btn btn-small blue" id="add-product-button">
            Add
          </button>
          <a href="/admin/articles" class="btn-submit btn-small">back</a>
        </div>
      </form>
    </div>
  </div>
</section>
