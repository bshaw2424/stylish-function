<% include ../partials/header %>
<% include ../partials/nav %>

<!-- page intro-description section -->
<section class="page-intro">
  <div class="container">
    <!-- <p>this is the seating section with a description soon to come!!!</p> -->
    <aside>
      <h6>seating categories</h6>
      <ul id="page-nav">
        <li><a href="#">Sofa</a></li>
        <li><a href="#">Sofa Bed</a></li>
        <li><a href="#">Chairs</a></li>
        <li><a href="#">Bean Bag Chairs</a></li>
      </ul>
    </aside>
  </div>
</section>
<!-- Page filter section with a search bar and select menu -->
<section id="filter-section">
  <div id="search">
    <input type="search" name="search-box" class="search-input" placeholder="Find more of what you are looking for...">
    <button type="submit" class="btn-small"><i class="material-icons">send</i></button>
  </div>
</section>
<main id="product-features">
  <span><i class="material-icons">arrow_upward</i></span>
  <div class="container">
    <div class="row">
      <div id="sorted-options">
        <a href="/table/newest">Newest</a>
        <a href="/table/low-price"><strong>Price:</strong> Low to High</a>
        <a href="/table/high-price"><strong>Price:</strong> High to Low</a>
      </div>
      <% table_LowPrice.forEach(lowPriceTableItems => { %>
      <div class="col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <img src="<%= lowPriceTableItems.main_image %>" alt="#" />
          </div>
          <div class="purchase-information">
            <p class="card-title"> <%= lowPriceTableItems.title %> </p>
            <p class="card-price"><%= `$${lowPriceTableItems.price}` %></p>
          </div>
          <a class="btn btn-small main-display-btn" href='/tables/<%= lowPriceTableItems._id %>'>more details</a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<% include ../partials/pagination %>
<% include ../partials/footer %>