<%- include ("../partials/header") %> <%- include ("../partials/nav") %>

<section class="contact-page">
  <div class="container">
    <div class="contact-page_header">
      <h1 class="contact-title">Contact Us</h1>
      <p>
        Contact us about any issues, commments, or business opportunities you
        may have. We look forward to your message.
      </p>
    </div>
    <form
      class="contact-page_form"
      id="contact-form"
      action="/messages/"
      method="POST"
    >
      <!-- name input field -->
      <label for="name">Name</label>
      <input
        type="text"
        id="name"
        name="Message[name]"
        class="product-input browser-default"
        required
      />

      <!-- subject input field -->
      <label for="subject">Subject</label>
      <input
        type="text"
        name="Message[subject]"
        class="product-input browser-default"
        id="subject"
        required
      />

      <!-- email input field -->
      <label for="email">Email</label>
      <input
        type="email"
        name="Message[email]"
        id="email"
        class="product-input browser-default"
        required
      />

      <!-- textarea message field -->
      <label for="textarea">Message</label>
      <textarea
        name="Message[message]"
        id="textarea"
        class="product-input browser-default"
        required
      >
      </textarea>
      <div
        class="g-recaptcha"
        data-sitekey="6LfDB7UfAAAAAPf31ZXJb6EYamYE-NZ0ENftjQO1"
        data-callback="submitButtonClickableIfRecaptchaTrue"
      ></div>
      <div class="button-container">
        <button
          type="submit"
          id="contact-send-button"
          class="btn btn-submit"
          disabled
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</section>

<script>
  document
    .querySelector("#contact-form")
    .addEventListener("submit", submitButtonClickableIfRecaptchaTrue);

  function submitButtonClickableIfRecaptchaTrue() {
    document.querySelector("#contact-send-button").removeAttribute("disabled");
  }
</script>
<%- include("../partials/footer") %>
