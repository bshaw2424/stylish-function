<% include ../../partials/header %>
<section>
  <div class="index-container">
    <% include ../../admin/admin-nav %>
    <div class="container">
      <div class="article-container">
        <div class="row">
          <div>
            <h1><%= articles.title %></h1>
            <a
              href="/admin/articles/<%= articles._id %>/products/new"
              class="btn btn-small blue"
              >Add Product</a
            >
            <a href="/admin/articles/" class="btn btn-small">Back</a>
            <div class="row">
              <% for(let product of articles.products){ %>
              <div class="col s12 m6 l4">
                <div class="card">
                  <h3 class="card-title">
                    <a
                      href="/admin/articles/<%= articles._id %>/products/<%= product._id %>"
                      ><%= product.title %></a
                    >
                  </h3>
                  <div class="card-image">
                    <img src="<%= product.image %>" alt="test" />
                  </div>
                  <div class="card-content">
                    <p><%= product.description %></p>
                  </div>
                </div>
                <a
                  class="btn btn-small tan"
                  href="/admin/articles/<%= articles._id %>/products/<%= product._id %>/edit"
                >
                  edit
                </a>
                <form
                  action="/admin/articles/<%= articles._id %>/products/<%= product._id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-small red">delete</button>
                </form>
              </div>
              <% } %>
            </div>
          </div>
          <div class="col sm12 m6 l4"></div>
        </div>
      </div>
    </div>
  </div>
</section>
