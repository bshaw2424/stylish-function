<% include ../../partials/header %>
<section class="index-container">
  <% include ../../admin/admin-nav %>
  <div class="container">
    <form
      action="/admin/articles/<%= article._id %>/products"
      method="POST"
      class="form-group"
      enctype="multipart/form-data"
    >
      <div class="title-container">
        <h1>Add Product</h1>
        <i class="material-icons hide-on-large-only">menu</i>
      </div>
      <div class="product-section">
        <label for="product-title">Product Title:</label>
        <input
          type="text"
          name="Product[title]"
          id="product-title"
          class="browser-default form-field"
        />

        <label for="product-price">Product Price:</label>
        <input
          type="text"
          name="Product[price]"
          id="product-price"
          class="browser-default form-field"
        />

        <label for="product-image">Product Image:</label>
        <input
          type="file"
          name="Product[image]"
          id="product-image"
          class="browser-default form-field"
        />

        <label for="product-description">Product Description:</label>
        <textarea
          name="Product[description]"
          id="product-description"
          cols="30"
          rows="10"
          class="form-field"
        ></textarea>
      </div>
      <div class="button-container">
        <button type="submit" class="btn go-button" id="add-product-button">
          save
        </button>
        <a href="/admin/articles/<%= article._id %>" class="btn static-button"
          >cancel</a
        >
      </div>
    </form>
  </div>
</section>
