<% include ../partials/header %>
<% include ../partials/nav %>

<!-- page intro-description section -->
<div class="container">
  <section class="page-intro">
    <h3>Seating</h3>
    <aside>
      <div class="category-filter filter">
        <span class="filter-title category">Category</span>
        <div class="category-nav show hide">
          <ul>
            <li><a href="/seating/modular-sectional">modular/sectional</a></li>
            <li><a href="/seating/alternative-seating">alternative seating</a></li>
            <li><a href="/seating/lounge-seating">sleeper sofa</a></li>
          </ul>
        </div>
      </div>
      <div class="sort-filter filter">
        <span class="filter-title sort">Sort</span>
        <div class="sort-nav sort hide">
          <a href="/seating/newest">newest</a>
          <a href="/seating/low-price">low to high</a>
          <a href="/seating/high-price">high to low</a>
        </div>
      </div>
    </aside>
  </section>
</div>
<main class="product-features">
  <div class="container">
    <div class="row">
      <% seatingProducts.forEach(seatingProduct => { %>
      <div class="product-card col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <a href="/category/seating/<%= seatingProduct._id %>">
              <img src="<%= seatingProduct.main_image %>" alt="<%= seatingProduct.title %>" />
            </a>
          </div>
          <div class="card-content purchase-information">
            <h4>
              <a class="card-title" href="/category/seating/<%= seatingProduct._id %>">
                <%= seatingProduct.title %>
              </a>
            </h4>
            <aside class="card-price"><%= `$${seatingProduct.price}` %></aside>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<% include ../partials/footer %>