<header class="display-header">
  <%- include('../partials/nav') %>
  <section class="display-header-container container">
    <div id="hero-image-container">
      <img
        src="../../images/website-hero-picture.jpg"
        alt="functional sofa setup"
      />
      <div class="display-hero-title">
        <p>
          Redefining your space with style, functionality, and a touch of modern
        </p>
      </div>
    </div>
  </section>
  <section>
    <div class="container">
      <h1>Articles</h1>
      <div class="row">
        <% articles.forEach(article => { %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <img src="<%= article.image.url %>" alt="" />
            </div>
            <div class="card-content">
              <span>
                <a href="/articles/<%= article.slug %>" target="_blank">
                  <%= article.title %>
                </a>
              </span>
              <p><%= article.description %></p>
            </div>
          </div>
        </div>
        <%})%>
        <a class="article-link" href="/articles">see more articles</a>
      </div>
    </div>
  </section>
</header>
