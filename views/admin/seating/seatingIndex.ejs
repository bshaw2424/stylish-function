<% include ../../partials/header %>

<div class="index-container">
  <% include ../../admin/admin-nav %>
  <section class="product-container container">
    <h1>seating products</h1>
    <div class="product-index">
      <div class="product-filter">Sort
        <div class="filter-title">
          <span class="material-icons arrow-down">keyboard_arrow_down</span>
          <span class="material-icons arrow-up">keyboard_arrow_up</span>
        </div>
        <div class="product-sort-options">
          <a href="#">newest</a>
          <a href="#">oldest</a>
          <a href="#">high price</a>
          <a href="#">low price</a>
        </div>
      </div>
      <a href="/admin/products/seating/new">Create New Product</a>
      <input class="search" type="text" placeholder="search" />
    </div>
    <div class="product-display-container">
      <div class="row">
        <% seatingProducts.forEach(seating =>{ %>
        <div class="col s12 m6 l4 card-container">
          <div class="card">
            <div class="card-image">
              <img src="<%= seating.main_image %>" />
            </div>
            <div class="card-content purchase-information">
              <h4>
                <a href="/admin/products/seating/<%= seating._id %>">
                  <%= seating.title %>
                </a>
              </h4>
              <span>$<%= seating.price %></span>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </section>
</div>