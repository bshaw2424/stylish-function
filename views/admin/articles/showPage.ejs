<% include ../../partials/header %>
<section>
  <div class="index-container">
    <% include ../../admin/admin-nav %>
    <div class="container">
      <div class="article-container">
        <div class="row">
          <h1><%= articles.title %></h1>
          <div>
            <a
              href="/admin/articles/<%= articles._id %>/products/edit"
              class="btn btn-small blue"
              >Add Product</a
            >
            <div>
              <h3>products</h3>
              <% for(let product of articles.products){ %>
              <h3><%= product.title %></h3>
              <img src="<%= product.image %>" alt="tester image" />
              <% } %>
            </div>
            <a href="/admin/articles" class="btn btn-small">Back</a>
          </div>
          <div class="col sm12 m6 l4"></div>
        </div>
      </div>
    </div>
  </div>
</section>
