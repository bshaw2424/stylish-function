<% include ../partials/header %>
<% include ../partials/nav %>

<!-- page intro-description section -->
<section class="page-intro">
  <div class="container">
    <h3>Seating</h3>
    <div class="secondary-nav">
      <a href="/seating/modular-sectional">modular/sectional</a>
      <a href="/seating/alternative-seating">alternative seating</a>
      <a href="/seating/lounge-seating">lounge seating</a>
    </div>
  </div>
</section>
<!-- Page filter section with a search bar and select menu -->
<section id="filter-section">
  <div class="container">
    <div class="price-filter filter">
      <span class="category-title">Sort By:</span>
      <ul class="inActive">
        <li><a href="/seating/newest">newest</a></li>
        <li><a href="/seating/low-price">low to high</a></li>
        <li><a href="/seating/high-price">high to low</a></li>
      </ul>
    </div>
  </div>
</section>
<main id="product-features">
  <div class="container">
    <div class="row">

      <% seatingProducts.forEach(seatingProduct => { %>
      <!-- desktop filter section -->
      <aside id="aside-filter" class="product-aside">
        <p> filter </p>
        <ul>
          <a href="/seating/newest">
            <li>Newest</li>
          </a>
          <a href="/seating/low-price">
            <li>Low - High</li>
          </a>
          <a href="/seating/high-price">
            <li>High - Low</li>
          </a>
        </ul>
      </aside>
      <div class="product-card col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <a href="/seating/<%= seatingProduct._id %>">
              <img src="<%= seatingProduct.main_image %>" alt="<%= seatingProduct.title %>" />
            </a>
          </div>
          <div class="purchase-information">
            <p class="card-title">
              <a href="/seating/<%= seatingProduct._id %>">
                <%= seatingProduct.title %>
              </a>
            </p>
            <p class="card-price"><%= `$${seatingProduct.price}` %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<% include ../partials/pagination %>
<% include ../partials/footer %>