<% include ../../partials/header %>

<section class="index-container">
  <% include ../../admin/admin-nav %>
  <div class="container">
    <div class="title-container">
      <h1><a href="/admin/articles"><%= articles.title %></a></h1>
      <i class="material-icons hide-on-large-only">menu</i>
    </div>
    <div class="filter-search">
      <input
        type="text"
        name="filter-search"
        id="filter-search"
        class="browser-default"
        placeholder="filter seach"
      />

      <a
        href="/admin/articles/<%= articles.slug %>/products/new"
        class="btn go-button"
        >Add Product</a
      >
    </div>
    <span class="product-count"
      >Number of Products - <%= articles.products.length %></span
    >
    <!-- <a href="/admin/articles/" class="btn btn-small">Back</a> -->
    <div class="article-container">
      <div class="row">
        <% for(let product of articles.products) { %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <img src="<%= product.image.url %>" alt="<%= product.image %>" />
            </div>
            <div class="card-content">
              <h3 class="card-title">
                <a
                  href="/admin/articles/<%= articles.slug %>/products/<%= product.slug %>"
                >
                  <%= product.title %>
                </a>
              </h3>
              <p><%= product.description %></p>
              <div class="button-container card-action">
                <a
                  href="/admin/articles/<%= articles.slug %>/products/<%= product.slug %>/edit"
                  class="btn go-button"
                  >Edit</a
                >
                <form
                  action="/admin/articles/<%= articles.slug %>/products/<%= product.slug %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn delete-button">delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>
