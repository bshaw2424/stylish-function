<% include ../../partials/header %>
<section>
  <div class="index-container">
    <% include ../../admin/admin-nav %>
    <div class="container">
      <div>
        <h1>Articles</h1>
        <a href="/admin/articles/new" class="btn btn-small blue"
          >Create New Articles</a
        >
      </div>
      <div class="article-container">
        <div class="row">
          <% for(let article of articles) { %>
          <div class="col s12 m6 l4">
            <div class="card">
              <div class="card-image">
                <img src="<%= article.image %>" alt="<%= article.image %>" />
              </div>
              <div class="card-content">
                <a href="/admin/articles/<%= article._id %>" class="card-title">
                  <%= article.title %>
                </a>
                <p><%= article.description %></p>
              </div>
              <div class="button-container">
                <a href="/admin/articles/<%= article._id %>/edit" class="btn"
                  >Edit Article</a
                >
                <form
                  action="/admin/articles/<%= article._id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn">delete</button>
                </form>
                <a href="/" class="btn btn-small disabled">Publish</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>
