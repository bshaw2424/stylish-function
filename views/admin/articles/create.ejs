<% include ../../partials/header %>

<section>
  <div class="index-container">
    <% include ../../admin/admin-nav %>
    <div class="container">
      <!-- article form -->
      <form action="/admin/articles" method="POST">
        <h1>Add Article</h1>
        <div class="article-section">
          <label for="article-title">Article Title</label>
          <input
            type="text"
            id="article-title"
            class="browser-default form-field"
            name="Article[title]"
            required
          />

          <label for="main-image">Image</label>
          <input
            id="main-image"
            class="browser-default form-field"
            type="text"
            name="Article[image]"
            required
          />
          <label for="article-sub-description">Sub Description</label>
          <textarea
            id="article-sub-description"
            class="browser-default form-field"
            name="Article[sub_description]"
            required
          >
          </textarea>
          <label for="article-description">Article Description</label>
          <textarea
            id="article-description"
            class="browser-default form-field"
            name="Article[description]"
            required
          >
          </textarea>
        </div>

        <!-- product form for parent article -->
        <div class="product-section">
          <label for="product-title">Product Title</label>
          <input
            type="text"
            name="Products[title]"
            id="product-title"
            class="browser-default form-field"
          />

          <label for="product-price">Product Price</label>
          <input
            type="text"
            name="Products[price]"
            id="product-price"
            class="browser-default form-field"
          />

          <label for="product-image">Product Image</label>
          <input
            type="text"
            name="Products[image]"
            id="product-image"
            class="browser-default form-field"
          />

          <label for="product-description">Product Description</label>
          <textarea
            name="Products[description]"
            id="product-description"
            cols="60"
            rows="10"
            class="form-field"
          ></textarea>
        </div>
        <div class="button-container">
          <button type="submit" class="btn-submit btn-small">send</button>
          <a href="/admin/articles" class="btn-submit btn-small">back</a>
        </div>
      </form>
    </div>
  </div>
</section>
