<% include ../../partials/header %>
<section>
  <div class="index-container">
    <% include ../../admin/admin-nav %>
    <div class="container">
      <div class="title-container">
        <h1><%= articles.title %></h1>
      </div>
      <div class="filter-search">
        <input
          type="text"
          name="filter-search"
          id="filter-search"
          class="browser-default"
          placeholder="filter seach"
        />
        <a
          href="/admin/articles/<%= articles._id %>/products/new"
          class="btn btn-small blue"
          >Add Product</a
        >
      </div>
      <!-- <a href="/admin/articles/" class="btn btn-small">Back</a> -->
      <div class="row">
        <% for(let product of articles.products){ %>
        <div class="col s12 m6 l4">
          <div class="card">
            <div class="card-image">
              <img src="<%= product.image %>" alt="test" />
            </div>
            <div class="card-content">
              <div class="card-title">
                <a
                  href="/admin/articles/<%= articles._id %>/products/<%= product._id %>"
                  ><%= product.title %></a
                >
              </div>
              <p><%= product.description %></p>
              <div class="button-container">
                <a
                  href="/admin/articles/<%= articles._id %>/products/<%= product._id %>/edit"
                  class="btn"
                >
                  edit
                </a>
                <form
                  action="/admin/articles/<%= articles._id %>/products/<%= product._id %>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn">delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>
