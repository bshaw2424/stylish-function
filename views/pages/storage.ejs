<% include ../partials/header %>
<% include ../partials/nav %>

<!-- page intro-description section -->
<section class="page-intro">
  <div class="container">
    <h3>Storage</h3>
</section>
<!-- Page filter section with a search bar and select menu -->
<section id="filter-section">
  <div class="price-filter filter">
    <span class="category-title">Sort By:</span>
    <ul class="inActive">
      <li><a href="storage/newest">newest</a></li>
      <li><a href="storage/low-price">low to high</a></li>
      <li><a href="storage/high-price">high to low</a></li>
    </ul>
  </div>
  </div>
</section>
<main id="product-features">
  <div class="container">
    <div class="row">
      <% storage.forEach(storageProducts => { %>
      <aside id="aside-filter" class="product-aside">
        <p> filter </p>
        <ul>
          <a href="storage/newest">
            <li>Newest</li>
          </a>
          <a href="storage/low-price">
            <li>Low - High</li>
          </a>
          <a href="storage/high-price">
            <li>High - Low</li>
          </a>
        </ul>
      </aside>
      <div class="product-card col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <a href="storage/<%= storageProducts._id %>" target="_blank">
              <img src="<%= storageProducts.main_image %>" alt="<%= storageProducts.title %>" />
            </a>
          </div>
          <div class="purchase-information">
            <p class="card-title">
              <a href="storage/<%= storageProducts._id %>" target="_blank"><%= storageProducts.title %>
            </p>
            </a>
            <p class="card-price"><%= `$${storageProducts.price}` %></p>
          </div>
        </div>
      </div>
      <% }) %>

    </div>
  </div>
</main>

<% include ../partials/pagination %>
<% include ../partials/footer %>