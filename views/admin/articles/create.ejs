<% include ../../partials/header %>

<section>
  <div class="index-container">
  <% include ../../admin/admin-nav %>
  <div class="container">
      <h1>Add Article</h1>
      <form action="/admin.stylishfunction.com/articles" method="POST">
        <label for="article-title">Article Title</label>
        <input type="text" id="article-title" class="product-input browser-default"  name="Article[title]" required />
        
        <label for="main-image">Image</label>
        <input id="main-image" class="article-input browser-default" type="text" name="Article[image]" required />
        
        <label for="article-description">Product Description</label>
        <textarea id="article-description" class="product-input browser-default" name="Article[description]" required>
        </textarea>
        
        <label for="product-title">Product Title</label>
        <input type="text" name="Article[product-title]" id="product-title" class="browser-default">
        
        <label for="product-price">Product Price</label>
        <input type="text" name="Article[product-price]" id="" class="browser-default">
        
        <label for="product-image">Product Image</label>
        <input type="file" name="Article[product-image]" id="" class="browser-default">
        
        <label for="product-description">Product Description</label>
        <textarea name="Article[product-description]" id="product-description" cols="30" rows="10"></textarea>
        <div>
          <button type="submit" class="btn-submit btn-small">send</button>
          <a href="/admin.stylishfunction.com/articles" class="btn-submit btn-small">back</a>
        </div>
      </form>
    </div>
  </div>
</section>
