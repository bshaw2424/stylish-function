<% include ../../partials/header %>

<section>
  <div class="index-container">
    <% include ../../admin/admin-nav %>
    <div class="container">
      <form
        action="/admin/articles/<%= articles._id %>/products/<%= products._id %>?_method=PUT"
        method="POST"
        class="form-group"
      >
        <h1>Edit: <%= products.title %></h1>
        <div class="product-section">
          <label for="product-title">Product Title</label>
          <input
            type="text"
            name="Products[title]"
            id="product-title"
            class="browser-default form-field"
            value="<%= products.title %>"
          />

          <label for="product-price">Product Price</label>
          <input
            type="text"
            name="Products[price]"
            id="product-price"
            class="browser-default form-field"
            value="<%= products.price %>"
          />

          <label for="product-image">Product Image</label>
          <input
            type="text"
            name="Products[image]"
            id="product-image"
            class="browser-default form-field"
            value="<%= products.image %>"
          />

          <label for="product-description">Product Description</label>
          <textarea
            name="Products[description]"
            id="description"
            cols="30"
            rows="10"
            class="form-field"
          >
<%= products.description %>
          </textarea>
        </div>
        <div class="button-container">
          <button class="btn go-button" id="add-a-product-button">save</button>
          <a
            href="/admin/articles/<%= articles._id %>"
            class="btn cancel-button"
            >cancel</a
          >
        </div>
      </form>
    </div>
  </div>
</section>
