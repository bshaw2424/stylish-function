<% include ../partials/header %>
<% include ../partials/nav %>

<!-- page intro-description section -->
<div class="container">
  <section class="page-intro">
    <h3>Seating</h3>
    <aside>
      <div class="category-filter filter">
        <p class="filter-title">Category
          <span class="material-icons arrow-down">arrow_drop_down</span>
          <span class="material-icons arrow-up">arrow_drop_up</span>
        </p>
        <div class="category-nav">
          <a href="/seating/modular-sectional">modular/sectional</a>
          <a href="/seating/alternative-seating">alternative seating</a>
          <a href="/seating/lounge-seating">sleeper sofa</a>
        </div>
      </div>
      <div class="sort-filter filter">
        <p class="filter-title">Sort
          <span class="material-icons arrow-down">arrow_drop_down</span>
          <span class="material-icons arrow-up">arrow_drop_up</span>
        </p>
        <div class="sort-nav">
          <a href="/seating/newest">newest</a>
          <a href="/seating/low-price">low to high</a>
          <a href="/seating/high-price">high to low</a>
        </div>
      </div>
    </aside>
  </section>
</div>
<main class="product-features">
  <div class="container">
    <div class="row">
      <% seatingProducts.forEach(seatingProduct => { %>
      <div class="product-card col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <a href="/seating/<%= seatingProduct._id %>">
              <img src="<%= seatingProduct.main_image %>" alt="<%= seatingProduct.title %>" />
            </a>
          </div>
          <div class="purchase-information">
            <a class="card-title" href="/category/seating/<%= seatingProduct._id %>">
              <%= seatingProduct.title %>
            </a>
            <aside class="card-price"><%= `$${seatingProduct.price}` %></aside>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<% include ../partials/pagination %>
<% include ../partials/footer %>