<% include ../partials/header %>
<% include ../partials/nav %>

<!-- page intro-description section -->
<section class="page-intro">
  <div class="container">
    <h3>Seating</h3>
    <div class="secondary-nav"> Categories:
      <a href="">modular</a>
      <a href="">alternative</a>
      <a href="">lounge</a>
    </div>
  </div>
</section>
<!-- Page filter section with a search bar and select menu -->
<section id="filter-section">
  <div class="container">
    <div class="price-filter filter">
      <span class="category-title">Sort By:</span>
      <ul class="inActive">
        <li><a href="seating/newest">newest</a></li>
        <li><a href="seating/low-price">low to high</a></li>
        <li><a href="seating/high-price">high to low</a></li>
      </ul>
    </div>
  </div>
</section>
<main id="product-features">
  <div class="container">
    <div class="row">
      <% seating.forEach(seats => { %>
      <!-- desktop filter section -->
      <aside id="aside-filter" class="product-aside">
        <p> filter </p>
        <ul>
          <li>
            <a href="seating/newest">Newest</a>
          </li>
          <li>
            <a href="seating/low-price">Low - High</a>
          </li>
          <li>
            <a href="seating/high-price">High - Low</a>
          </li>
        </ul>
      </aside>
      <div class="product-card col s12 m6 l4">
        <div class="card">
          <div class="card-image">
            <a href="seating/<%= seats._id %>" target="_blank">
              <img src="<%= seats.main_image %>" alt="<%= seats.title %>" />
            </a>
          </div>
          <div class="purchase-information">
            <p class="card-title">
              <a href="seating/<%= seats._id %>" target="_blank">
                <%= seats.title %>
              </a>
            </p>
            <p class="card-price"><%= `$${seats.price}` %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</main>

<% include ../partials/pagination %>
<% include ../partials/footer %>